﻿@{
    Layout = null;
}

<!DOCTYPE html>

<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<!-- Website CSS style -->
<link href="~/Content/css/Modificacion.css" rel="stylesheet">
<!-- Website Font style -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
<!-- Google Fonts -->
<link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Actualizar Datos</title>

    <!-- Script para la funcion de alertas -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">
                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-4">
                                <form id="formulario1" method="post">

                                    <div class="text-center mt-4">
                                        <h1 class="h2">Actualiza los datos de tu restaurante</h1>
                                        <p class="lead">
                                            ¡Actualiza tus datos para una mejor experiencia!
                                        </p>
                                    </div>
                                    <div class="form-group">
                                        <label>Pais</label>
                                        <input class="form-control form-control-lg" type="text" id="country" name="country" placeholder="Pais de tu Restaurante" value="@Model.Pais" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Departamento o Estado</label>
                                        <input class="form-control form-control-lg" type="text" id="state" name="state" placeholder="Departamento o Estado de tu Restaurante" value="@Model.Departamento" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Municipio o Ciudad</label>
                                        <input class="form-control form-control-lg" type="text" id="city" name="city" placeholder="Municipio o Ciudad de tu Restaurante" value="@Model.Municipio" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Zona</label>
                                        <input class="form-control form-control-lg" type="text" id="adress" name="adress" placeholder="Zona en la que se Ubica tu Restaurante" value="@Model.Zona" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Calle</label>
                                        <input class="form-control form-control-lg" type="text" id="street" name="street" placeholder="Calle en la que se Ubica tu Restaurante" value="@Model.Calle" required>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-9">
                                            <div class="form-group text-right">
                                                <a id="buttonre" href="@Url.Action("ListarPlatillo", "Home")" type="button" onclick="showAlertCancelar(this)" class="btn btn-lg btn-danger">Cancelar</a>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <div class="form-group text-right" id="buttonSig">
                                                <input type="submit" name="buttonSig" class="btn btn-lg btn-success" value="Actualizar">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.min.js"></script>




    <script>
            var url_guardar = '@Url.Action("GuardarUpdateUbica", "Usuario")';
            var url_listarP = '@Url.Action("ListarPlatillo", "Home")';
    </script>
    <script src="@Url.Content("~/Scripts/Views/Usuario/ModRestaurante.js")" type="text/javascript"></script>




    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")


</body>
</html>