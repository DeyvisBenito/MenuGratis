<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Plugin/css")

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="@Url.Action("ListarPlatillo", "Home")">Bienvenido a tu Menú</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">

            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("ModUsuario", "Usuario")">Editar Restaurante</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("ModRestaurante", "Usuario")"> Editar Ubicacion</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("CerrarSesion", "Home")">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Platillos</div>
                        <a class="nav-link" href="@Url.Action("ListarPlatillo", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Agregar platillos @*Espaciado para agregar platillos*@
                        </a>
                        <div class="sb-sidenav-menu-heading">Presentación de platillos</div>
                        <a class="nav-link" href="@Url.Action("mostrarDe", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Desayunos  @*Espaciado para agregar platillos*@
                        </a>
                        <a class="nav-link" href="@Url.Action("mostEnt", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Entradas  @*Espaciado para agregar platillos*@
                        </a>
                        <a class="nav-link" href="@Url.Action("mostPlaF", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Platos fuertes  @*Espaciado para agregar platillos*@
                        </a>
                        <a class="nav-link" href="@Url.Action("mostPost", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Postres @*Espaciado para agregar platillos*@
                        </a>
                        <a class="nav-link" href="@Url.Action("mostBebi", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Bebidas  @*Espaciado para agregar platillos*@
                        </a>


                    </div>
                </div>
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-12 text-center">
                            <h5>Menú de Platillos</h5>
                            <div class="btn-group">
                                <button id="btnAgregarPlatillo" class="btn btn-primary mb-3 me-3">+</button>
                                <div id="opcionesPlatillos" class="btn-group d-none">
                                    <button class="btn btn-success btn-tipo-platillo">Desayuno</button>
                                    <button class="btn btn-success btn-tipo-platillo">Entrada</button>
                                    <button class="btn btn-success btn-tipo-platillo">Plato Fuerte</button>
                                    <button class="btn btn-success btn-tipo-platillo">Postre</button>
                                    <button class="btn btn-success btn-tipo-platillo">Bebida</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="sb-sidenav-footer">
                    <div class="small">Bienvenido</div>
                    Agrega los platillos que desees
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">

                    <div class="container body-content">
                        @RenderBody()
                        <hr />

                    </div>
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                
            </footer>
        </div>
    </div>

    <!-- Script JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnAgregarPlatillo = document.getElementById('btnAgregarPlatillo');
            const opcionesPlatillos = document.getElementById('opcionesPlatillos');

            btnAgregarPlatillo.addEventListener('click', function () {
                opcionesPlatillos.classList.toggle('d-none');
            });

            // Manejar acción de agregar
            const botonesAgregar = document.querySelectorAll('.btn-tipo-platillo');
            botonesAgregar.forEach(boton => {
                boton.addEventListener('click', function () {
                    const tipoPlatillo = boton.textContent.trim();
                    alert('Agregar platillo de tipo: ' + tipoPlatillo);
                    // Aquí puedes implementar la lógica para agregar el platillo al menú
                    opcionesPlatillos.classList.add('d-none');
                });
            });
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/Plugin/js")
    @RenderSection("scripts", required: false)

</body>


</html>